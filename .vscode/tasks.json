{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "ninja",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
		{
			"label": "Build and Run",
			"type": "shell",
			"command": "ninja && ${workspaceFolder}/run.sh",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}